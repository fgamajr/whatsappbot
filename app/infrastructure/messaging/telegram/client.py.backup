    async def download_media(self, media_id: str) -> Optional[bytes]:
        """Download media file from Telegram with detailed debugging"""
        try:
            print(f"\nðŸ› === TELEGRAM DOWNLOAD_MEDIA DEBUG ===")
            print(f"ðŸ› Media ID: {media_id}")
            print(f"ðŸ› Token existe: {bool(self.token)}")
            print(f"ðŸ› Base URL: {self.base_url}")
            
            # Step 1: Get file info
            url = f"{self.base_url}/getFile"
            params = {"file_id": media_id}
            
            print(f"ðŸ› URL getFile: {url}")
            print(f"ðŸ› Params: {params}")
            
            async with aiohttp.ClientSession(timeout=aiohttp.ClientTimeout(total=300)) as session:
                print(f"ðŸ› Fazendo requisiÃ§Ã£o getFile...")
                
                async with session.get(url, params=params) as response:
                    print(f"ðŸ› Status getFile: {response.status}")
                    
                    if response.status != 200:
                        error_text = await response.text()
                        print(f"ðŸ› âŒ Erro getFile: {error_text}")
                        
                        logger.error("Failed to get file path", extra={
                            "file_id": media_id,
                            "status": response.status,
                            "error": error_text
                        })
                        return None
                    
                    file_data = await response.json()
                    print(f"ðŸ› File data: {file_data}")
                    
                    if not file_data.get("ok"):
                        print(f"ðŸ› âŒ API error: {file_data.get('description')}")
                        
                        logger.error("Telegram API error", extra={
                            "file_id": media_id,
                            "error": file_data.get("description")
                        })
                        return None
                    
                    file_info = file_data["result"]
                    file_path = file_info["file_path"]
                    file_size = file_info.get("file_size", 0)
                    
                    print(f"ðŸ› File path: {file_path}")
                    print(f"ðŸ› File size: {file_size} bytes ({file_size/1024/1024:.1f}MB)")
                
                # Step 2: Download file
                download_url = f"https://api.telegram.org/file/bot{self.token}/{file_path}"
                print(f"ðŸ› Download URL: {download_url}")
                
                print(f"ðŸ› Iniciando download...")
                
                async with session.get(download_url) as response:
                    print(f"ðŸ› Status download: {response.status}")
                    
                    if response.status == 200:
                        print(f"ðŸ› Lendo conteÃºdo...")
                        content = await response.read()
                        actual_size = len(content)
                        
                        print(f"ðŸ› âœ… Download concluÃ­do!")
                        print(f"ðŸ› Tamanho baixado: {actual_size} bytes ({actual_size/1024/1024:.1f}MB)")
                        
                        logger.info("Media downloaded", extra={
                            "file_id": media_id,
                            "size_bytes": actual_size
                        })
                        return content
                    else:
                        error_text = await response.text()
                        print(f"ðŸ› âŒ Erro download: {error_text}")
                        
                        logger.error("Failed to download media", extra={
                            "file_id": media_id,
                            "status": response.status,
                            "error": error_text
                        })
                        return None
                        
        except Exception as e:
            print(f"\nðŸš¨ === EXCEÃ‡ÃƒO NO DOWNLOAD_MEDIA ===")
            print(f"ðŸš¨ Erro: {e}")
            print(f"ðŸš¨ Tipo: {type(e).__name__}")
            print(f"ðŸš¨ Media ID: {media_id}")
            print(f"ðŸš¨ Traceback completo:")
            traceback.print_exc()
            print(f"ðŸš¨ ====================================\n")
            
            logger.error("Error downloading media", extra={
                "error": str(e),
                "file_id": media_id
            })
